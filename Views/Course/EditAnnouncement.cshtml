@using HomemadeLMS.Models.Domain
@model Announcement
@{
	ViewData["Title"] = "Редактирование объявления";
	ViewData["NavbarMenu"] = MenuBuilder.DefaultNavbarMenu;
}

<div class="col-12 col-lg-8" align="left">
	<form method="POST">
		<div class="form-group mb-5">
			<label for="titleInput" class="form-label">Заголовок (обязательное поле)</label>
			<input class="form-control" id="titleInput" name="title"
				   value="@Model.Title" maxlength="@Announcement.MaxTitleSize">
		</div>
		<div class="form-group mt-5">
			<label for="contentInput" class="form-label">
				Основной текст
			</label>
			<textarea class="form-control" id="contentInput" name="content"
				      rows="15" maxlength="@Announcement.MaxContentSize">@Model.Content</textarea>
		</div>
		<div class="mt-4" align="center">
			<button type="submit" class="btn btn-secondary">Сохранить</button>
		</div>
	</form>
	<div class="mt-5" align="center">
		<a class="link-custom-secondary" href="/course/announcement?id=@Model.Id">Вернуться</a>
	</div>
</div>
