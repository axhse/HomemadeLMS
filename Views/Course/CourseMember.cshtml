@using HomemadeLMS.Models.Domain
@model CourseMemberVM
@{
	ViewData["Title"] = "Участник";
	ViewData["NavbarMenu"] = MenuBuilder.GetDefaultNavbarMenu();
}

<p>username: @Model.Member.Username</p>
<p>role: @Model.Member.Role.ToString()</p>
@if (Model.Course.CanBeEditedBy(Model.Account)) {
	<form class="mt-5" method="POST">
		<div class="d-inline-flex mb-4">
			<div>
				<select class="form-control text-center" id="roleCodeInput" name="roleCode">
					<option value="">Выбрать роль</option>
					<option value="@CourseRole.Student.ToString()">Студент</option>
					<option value="@CourseRole.Assistant.ToString()">Ассистент</option>
					<option value="@CourseRole.Teacher.ToString()">Преподаватель</option>
				</select>
			</div>
		</div>
		<div class="d-inline-flex mb-4 ms-4">
			<button type="submit" class="btn btn-secondary">Изменить роль</button>
		</div>
	</form>
	<div class="mt-5">
		<a class="link-secondary" href="/course/members/?courseId=@Model.Course.Id">Все участники</a>
	</div>
}
